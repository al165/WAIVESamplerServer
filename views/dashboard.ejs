<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body class="bg-light">

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/dashboard">WAIVE Sampler Database Manager</a>
      <div class="d-flex">
        <a href="/logout" class="btn btn-outline-light">Logout</a>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <div class="container row justify-content-between align-items-center">
      <h2 class="col">Archive Dashboard</h2>
      <span class="text-secondary col-1"><%= user_version %></span>
    </div>

    <!-- Create Archive Form -->
    <div class="card my-4 p-3">
      <h4>Create Archive</h4>
      <form action="/add-archive" method="POST">
        <div class="mb-3">
          <input type="text" name="archiveName" class="form-control" placeholder="Archive Name" required>
        </div>
        <button type="submit" class="btn btn-success">Create New Archive</button>
      </form>
    </div>

    <!-- List of Files/Folders -->
    <div class="card my-4 p-3">
      <class class="container row justify-content-between align-items-center">
        <h4 class="col-8">Archive List</h4>
        <div class="col-4 text-end">
          <a class="link-secondary" href="/filelist" target="_blank" rel="noopener noreferrer">/filelist</a>
          <a class="link-secondary" href="/tags" target="_blank" rel="noopener noreferrer">/tags</a>
          <a class="link-secondary" href="/latest" target="_blank" rel="noopener noreferrer">/latest</a>
        </div>

      </class>
      <ul class="list-group">
        <% if (archives.length === 0) { %>
        <li class="list-group-item text-center">No archives found.</li>
        <% } else { %>
        <% archives.forEach(archive=> { %>
        <a class="text-decoration-none" href="/dashboard/<%= archive.name %>">
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <span> <i class="bi bi-archive-fill"></i> <strong><%= archive.name %></strong></span>
          </li>
        </a>
        <% }) %>
        <% } %>
      </ul>
    </div>
  </div>

</body>

</html>